<% content_for :head do %>
    <meta name="turbolinks-cache-control" content="no-cache"> 
<% end %>

<section class="hero is-medium has-bg-img">
    <div class="hero-body">
        <div class="container">
            <h1 class="title has-text-white">
                Trouver les services d'un freelance<br>
                en Loire-Atlantique (44)
            </h1>
            <%= form_tag search_path, method: :get, class: "field has-addons" do %>
                <div class="control has-icons-left">
                    <span class="icon is-small is-left">
                        <i class="fa fa-search"></i>
                    </span>
                    <%= text_field_tag 'q', '', class: "input", placeholder: "Essayer 'logo'" %>
                </div>
                <div class="control">
                    <button class="button is-primary" type="submit">Rechercher</button>
                </div>
            <% end %>
        </div>
    </div>
</section>

<section class="m-t-100">
    <div class="container">
        <h1 class="title is-4 p-l-10">Services populaires</h1>
        <div id="carousel-category" class="hero-carousel">

            <div class="carousel-item">
                <div class="p-10">
                    <%= link_to search_path(category: 1) do %>
                        <div class="card-image">
                            <%= image_tag 'home/category_4.jpg', class: 'is-background', width: "100%", height: "100%" %>
                            <div class="card-content is-overlay is-clipped">
                                <span class="subtitle f-15 has-text-white">Développer votre activité</span><br>
                                <span class="title is-4 has-text-white">Site vitrine</span>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>

            <div class="carousel-item">
                <div class="p-10">
                    <%= link_to search_path(category: 2) do %>
                        <div class="card-image">
                            <%= image_tag 'home/category_3.jpg', class: 'is-background', width: "100%", height: "100%" %>
                            <div class="card-content is-overlay is-clipped">
                                <span class="subtitle f-15 has-text-white">Créer votre marque</span><br>
                                <span class="title is-4 has-text-white">Logo</span>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>

            <div class="carousel-item">
                <div class="p-10">
                    <%= link_to search_path(category: 3) do %>
                        <div class="card-image">
                            <%= image_tag 'home/category_5.jpg', class: 'is-background', width: "100%", height: "100%" %>
                            <div class="card-content is-overlay is-clipped">
                                <span class="subtitle f-15 has-text-white">Améliorer votre présence en ligne</span><br>
                                <span class="title is-4 has-text-white">Réseaux sociaux</span>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>

            <div class="carousel-item">
                <div class="p-10">
                    <%= link_to search_path(category: 4) do %>
                        <div class="card-image">
                            <%= image_tag 'home/category_2.jpg', class: 'is-background', width: "100%", height: "100%" %>
                            <div class="card-content is-overlay is-clipped">
                                <span class="subtitle f-15 has-text-white">Vendre sur Internet</span><br>
                                <span class="title is-4 has-text-white">Site E-commerce</span>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>

            <div class="carousel-item">
                <div class="p-10">
                    <%= link_to search_path(category: 5) do %>
                        <div class="card-image">
                            <%= image_tag 'home/category_6.jpg', class: 'is-background', width: "100%", height: "100%" %>
                            <div class="card-content is-overlay is-clipped">
                                <span class="subtitle f-15 has-text-white">Accroitre votre attractivité</span><br>
                                <span class="title is-4 has-text-white">Campagne publicitaire</span>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>

        </div>
    </div>
</section>

<script>
    BulmaCarousel.attach("#carousel-category", {
        slidesToScroll: 1,
        slidesToShow: 4,
        infinite: false,
        pagination: false
    });
</script>