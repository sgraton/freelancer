<% content_for :head do %>
    <meta name="turbolinks-cache-control" content="no-cache"> 
<% end %>

<section class="hero is-medium has-bg-img">
    <div class="hero-body">
        <div class="container">
            <h1 class="title has-text-white">
                Trouver les services d'un freelance<br>
                pour votre entreprise
            </h1>
            <%= form_tag search_path, method: :get, class: "field has-addons" do %>
                <div class="control has-icons-left">
                    <span class="icon is-small is-left">
                        <i class="fa fa-search"></i>
                    </span>
                    <%= text_field_tag 'q', '', class: "input", placeholder: "Essayer 'design logo'" %>
                </div>
                <div class="control">
                    <button class="button is-primary" type="submit">Rechercher</button>
                </div>
            <% end %>
        </div>
    </div>
</section>

