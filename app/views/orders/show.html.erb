<section class="section" data-channel-subscribe="order" data-order-id="<%= @order.id %>">
    <div class="container">
        <div class="columns">

            <!-- LEFT SIDE -->
            <div class="column is-two-thirds">
                <p class="menu-label">
                    Commentaires sur votre commande
                </p>
                <hr>
                <div id="comment-list">
                    <% @comments.each do |c| %>
                        <%= render 'orders/comment', comment: c %>
                    <% end %>
                </div>
                <hr>

                <article class="media">
                    <%= link_to users_path(current_user) do %>
                        <figure class="media-left">
                            <p class="image is-64x64 avatar <%= current_user.online? ? 'online' : 'offline' %>">                            
                                <%= image_tag avatar_url(current_user), class: "is-rounded" %>
                            </p>
                        </figure>
                    <% end %>
                    <div class="media-content">
                        <%= form_with model: Comment.new, id: "new_comment" do |f| %>
                            <%= f.hidden_field :order_id, value: @order.id %>
                            <div class="field">
                                <%= f.text_area :content, class: "textarea", placeholder: "Type your comment" %>
                            </div>

                            <div class="field is-pulled-left">
                                <div class="file is-warning has-name">
                                    <label class="file-label">
                                        <%= f.file_field :attachment_file, class: "file-input" %>
                                        <span class="file-cta">
                                            <span class="file-label">Pièce jointe (facultatif)</span>
                                        </span>
                                        <span class="file-name" id="file-name">Aucun fichier sélectionné</span>
                                    </label>
                                </div>
                            </div>

                            <div class="field is-pulled-right">
                                <%= f.submit "Poster un commentaire", class: "button is-primary" %>                      
                            </div>
                        <% end %>
                    </div>
                </article>
            </div>

            <!-- RIGHT SIDE -->
            <div class="column">
                <div class="card">
                    <div class="card-image">                        
                        <figure class="image is-3by2">
                            <%= image_tag gig_cover(@gig) if @gig %>
                            <%= image_tag 'icon_default_image.png' if @request %>
                        </figure>
                    </div>
                    <div class="card-content">
                        <p>
                            <strong><%= @order.title %></strong>
                            <strong class="title is-4 is-pulled-right has-text-success">€<%= @order.amount %></strong>
                        </p>
                        <br>
                        <small>
                            <p>Vendeur : <%= @order.seller_name %></p>
                            <br>
                            <p>Commande : <%= @order.id %></p>
                            <br>
                            <p><%= @order.created_at.strftime('%d, %b %Y') %></p>  
                        </small>                    
                    </div>                   
                </div>
            </div>

        </div>
    </div>
</section>

<script>
    $(document).ready(function() {
        var file = $('.file-input');
        file.change(function (e) {
            if (file[0].files.length > 0) {
                var attachment = file[0].files[0];
                $('.file-name').text(attachment.name + " (" + attachment.size + " bytes)");
            }
        })
    })
</script>