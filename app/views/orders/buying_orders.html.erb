<section class="section">
    <div class="container">
        <p class="title">Manage Buying Orders</p>

        <table class="table is-fullwidth">
            <thead>
                <tr>
                    <th>Date</th>
                    <th class="th">Seller Name</th>
                    <th class="th">Title</th>
                    <th class="th">Due Date</th>
                    <th class="th">Amount</th>
                    <th class="th">Status</th>
                    <th class="th">Action</th>
                </tr>
            </thead>

            <tbody>
                <% if @orders.blank? %>
                    <tr>
                        <td colspan="7" class="has-text-centered"><h1>NOTHING TO SHOW HERE</h1></td>
                    </tr>
                <% end %>
                <% @orders.each do |o| %>
                    <tr>
                        <td><%= o.created_at.strftime('%d %b %Y') %></td>
                        <td><%= o.seller_name %></td>
                        <td><%= link_to o.title, gig_path(o.gig) %></td>
                        <td><%= o.due_date.strftime('%d %b %Y') %></td>
                        <td><%= o.amount %></td>
                        <td>
                            <span class="tag <%= 'is-warning' if o.inprogress? %> <%= 'is-success' if o.complete? %>">
                                <%= o.status.capitalize %>
                            </span>
                        </td>
                        <td>
                            <%= link_to 'Mark Complete', complete_order_path(o), method: :put, class: "button is-small is-primary #{'is-hidden' if o.complete?}" %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</section>