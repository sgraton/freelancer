<section class="section">
    <div class="container">
        <p class="title">Gérer les ordres de vente</p>

        <table class="table is-fullwidth">
            <thead>
                <tr>
                    <th>Date</th>
                    <th class="th">Nom de l'acheteur</th>
                    <th class="th">Titre</th>
                    <th class="th">Date d'échéance</th>
                    <th class="th">Montant</th>
                    <th class="th">Statut</th>
                </tr>
            </thead>

            <tbody>
                <% if @orders.blank? %>
                    <tr>
                        <td colspan="6" class="has-text-centered"><h1>RIEN À MONTRER ICI</h1></td>
                    </tr>
                <% end %>
                <% @orders.each do |o| %>
                    <tr>
                        <td><%= o.created_at.strftime('%d %b %Y') %></td>
                        <td><%= o.buyer_name %></td>
                        <td>
                            <%= link_to o.title, order_detail_path(o) %>
                        </td>
                        <td><%= o.due_date.strftime('%d %b %Y') %></td>
                        <td>€<%= o.amount %></td>
                        <td>
                            <span class="tag <%= 'is-warning' if o.inprogress? %> <%= 'is-success' if o.complete? %>">
                                <%= o.status.capitalize %>
                            </span>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</section>
